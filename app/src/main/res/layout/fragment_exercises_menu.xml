<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.exercises.ExercisesMenuFragment">

    <Button
        android:id="@+id/btn_full_complex"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Полный комплекс"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_partial_complex"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Разминочный комплекс"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_full_complex"/>

</androidx.constraintlayout.widget.ConstraintLayout>